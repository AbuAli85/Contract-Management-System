# ========================================
# üîê SECURITY CONFIGURATION
# ========================================

# JWT and Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=redis://your-redis-url.upstash.io:6379
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# CORS Configuration (exact domains only, no wildcards)
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com,https://app.yourdomain.com

# Security Headers (always enabled)
SECURITY_HEADERS_ENABLED=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_HSTS=true

# MFA Configuration
MFA_ENABLED=true
MFA_REQUIRED_FOR_ADMIN=true
MFA_BACKUP_CODES_COUNT=10

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_DURATION=900
ACCOUNT_LOCKOUT_THRESHOLD=10

# Session Security
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=3
SESSION_BINDING_IP=true
SESSION_BINDING_USER_AGENT=true

# API Security
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Audit and Monitoring
ENABLE_SECURITY_AUDIT_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_RATE_LIMIT_LOGGING=true

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Connection
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ========================================
# üåê APPLICATION CONFIGURATION
# ========================================

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar

# ========================================
# üìß EMAIL CONFIGURATION
# ========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ========================================
# üîó EXTERNAL INTEGRATIONS
# ========================================

# Payment Gateway (if applicable)
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# File Storage
NEXT_PUBLIC_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# ========================================
# üìä MONITORING & ANALYTICS
# ========================================

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# ========================================
# üß™ DEVELOPMENT & TESTING
# ========================================

# Debug Configuration
DEBUG=false
DEBUG_AUTH=false
DEBUG_RBAC=false
DEBUG_API=false

# Test Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
CYPRESS_BASE_URL=http://localhost:3000
