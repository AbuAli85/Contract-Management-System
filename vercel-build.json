{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "dev": {
    "env": {
      "NODE_ENV": "development"
    }
  },
  "preview": {
    "env": {
      "NODE_ENV": "preview"
    }
  }
}
