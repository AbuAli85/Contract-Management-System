# ========================================
# üöÄ PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.production.local and fill in your values

# ========================================
# üåê APPLICATION CONFIGURATION
# ========================================

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Build Configuration
BUILD_ID=production
NEXT_PUBLIC_BUILD_TIMESTAMP=

# ========================================
# üîë SUPABASE CONFIGURATION
# ========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase API Keys
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase Auth Configuration
NEXT_PUBLIC_SUPABASE_AUTH_REDIRECT_URL=https://yourdomain.com/auth/callback
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# üõ°Ô∏è CAPTCHA CONFIGURATION
# ========================================

# hCaptcha Configuration
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key_here
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key_here

# Cloudflare Turnstile Configuration (Alternative)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# CAPTCHA Provider Selection (hcaptcha or turnstile)
NEXT_PUBLIC_CAPTCHA_PROVIDER=hcaptcha

# ========================================
# üîê SECURITY CONFIGURATION
# ========================================

# JWT and Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=redis://your-redis-url.upstash.io:6379
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# CORS Configuration (exact domains only, no wildcards)
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com,https://app.yourdomain.com

# Security Headers (always enabled)
SECURITY_HEADERS_ENABLED=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_HSTS=true

# MFA Configuration
MFA_ENABLED=true
MFA_REQUIRED_FOR_ADMIN=true
MFA_BACKUP_CODES_COUNT=10

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_DURATION=900
ACCOUNT_LOCKOUT_THRESHOLD=10

# Session Security
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=3
SESSION_BINDING_IP=true
SESSION_BINDING_USER_AGENT=true

# API Security
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Audit and Monitoring
ENABLE_SECURITY_AUDIT_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_RATE_LIMIT_LOGGING=true

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Connection
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ========================================
# üîó API & WEBHOOK CONFIGURATION
# ========================================

# API Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Webhooks
WEBHOOK_URL=https://hook.eu2.make.com/your-webhook-id-here

# ========================================
# üìß EMAIL CONFIGURATION
# ========================================

# SMTP Configuration for Production
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Your App Name

# Email Templates
EMAIL_TEMPLATE_WELCOME=welcome
EMAIL_TEMPLATE_RESET=reset-password
EMAIL_TEMPLATE_VERIFY=verify-email

# ========================================
# üìä MONITORING & ANALYTICS
# ========================================

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# üåç INTERNATIONALIZATION
# ========================================

# Default Locale
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supported Locales
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar,es,fr,de

# ========================================
# üîÑ CACHING & PERFORMANCE
# ========================================

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://your-redis-url.upstash.io:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
CDN_CACHE_TTL=3600

# ========================================
# üöÄ DEPLOYMENT CONFIGURATION
# ========================================

# Vercel Configuration
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_TEAM_ID=your_vercel_team_id

# Docker Configuration
DOCKER_REGISTRY=your_registry_url
DOCKER_IMAGE_TAG=latest

# ========================================
# üì± MOBILE CONFIGURATION
# ========================================

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=Your App Name
NEXT_PUBLIC_PWA_SHORT_NAME=YourApp
NEXT_PUBLIC_PWA_DESCRIPTION=Your app description
NEXT_PUBLIC_PWA_THEME_COLOR=#000000
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff

# ========================================
# üîß FEATURE FLAGS
# ========================================

# Enable/Disable Features
FEATURE_CAPTCHA_ENABLED=true
FEATURE_MFA_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_AUDIT_LOGGING_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_PWA_ENABLED=true

# ========================================
# üõ†Ô∏è DEVELOPMENT OVERRIDES
# ========================================

# Override for development (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_VERBOSE_LOGGING=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
