# ========================================
# üîê RBAC CONFIGURATION
# ========================================

# Enable/disable RBAC enforcement (default: true)
RBAC_ENFORCEMENT=true

# Redis cache configuration (optional)
# If not provided, falls back to in-memory cache
REDIS_URL=redis://localhost:6379

# RBAC cache TTL in milliseconds (default: 15 minutes)
RBAC_CACHE_TTL=900000

# RBAC cache max size (default: 1000 users)
RBAC_CACHE_MAX_SIZE=1000

# ========================================
# EXISTING ENVIRONMENT VARIABLES
# ========================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# External APIs (if any)
# API_KEY=your_api_key
# WEBHOOK_SECRET=your_webhook_secret

# Development
NODE_ENV=development
DEBUG=false
