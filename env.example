# ========================================
# üîê CONTRACT MANAGEMENT SYSTEM
# ========================================
# Professional environment configuration
# Copy this file to .env.local and fill in your values

# ========================================
# üåê APPLICATION CONFIGURATION
# ========================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Build Configuration
BUILD_ID=local-dev
NEXT_PUBLIC_BUILD_TIMESTAMP=

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database (if using direct connection)
DATABASE_URL="postgresql://username:password@localhost:5432/contract_management"

# ========================================
# üîë SUPABASE CONFIGURATION
# ========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase API Keys
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase Auth Configuration
NEXT_PUBLIC_SUPABASE_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# üîê RBAC & SECURITY CONFIGURATION
# ========================================

# RBAC Enforcement (true=enforce, false=dry-run)
RBAC_ENFORCEMENT=true

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_REFRESH_TOKEN_TIMEOUT=2592000000

# Security Headers
NEXT_PUBLIC_CSP_NONCE=
NEXT_PUBLIC_HSTS_MAX_AGE=31536000

# CORS Configuration (Development - includes localhost)
# In production, remove localhost and use only production domains
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# üöÄ PERFORMANCE & CACHING
# ========================================

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Upstash Redis (for rate limiting - optional in development)
# Leave empty to use in-memory rate limiting
# For production, create a free account at https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cache Configuration
RBAC_CACHE_TTL=900000
RBAC_CACHE_MAX_SIZE=1000
API_CACHE_TTL=300000
USER_SESSION_CACHE_TTL=1800000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# üìä MONITORING & ANALYTICS
# ========================================

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_POSTHOG_KEY=

# ========================================
# üìß EMAIL & NOTIFICATIONS (Resend.io)
# ========================================

# Resend Email Service (CONFIGURED ‚úÖ)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# From Email Address
# Testing: onboarding@resend.dev (works immediately, no domain setup needed)
# Production: noreply@yourdomain.com (requires domain verification in Resend)
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=SmartPro Contract Management System

# Resend Webhook Secret (optional - for webhook signature verification)
# Get from https://resend.com/webhooks after setting up webhook
# Webhook URL: https://yourdomain.com/api/webhooks/resend
RESEND_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Legacy SMTP (not used - keeping for reference)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Email Templates (handled by lib/email-templates/)
NEXT_PUBLIC_EMAIL_TEMPLATES_URL=https://yourdomain.com/email-templates

# ========================================
# üîó EXTERNAL INTEGRATIONS
# ========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Make.com Webhooks (Three separate webhooks for different contract types)
# eXtra Contracts (Simple/Fast)
MAKECOM_WEBHOOK_URL_EXTRA=https://hook.eu2.make.com/71go2x4zwsnha4r1f4en1g9gjxpk3ts4
# Sharaf DG Deployment Letters
MAKECOM_WEBHOOK_URL_SHARAF_DG=https://hook.eu2.make.com/4g8e8c9yru1uej21vo0vv8zapk739lvn
# General Contracts (Full-Featured)
MAKECOM_WEBHOOK_URL_GENERAL=https://hook.eu2.make.com/j07svcht90xh6w0eblon81hrmu9opykz
# Legacy/Default webhook (points to eXtra)
WEBHOOK_URL=https://hook.eu2.make.com/71go2x4zwsnha4r1f4en1g9gjxpk3ts4

# Payment Gateway (if applicable)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# File Storage
NEXT_PUBLIC_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ========================================
# üß™ TESTING & DEVELOPMENT
# ========================================

# Test Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
CYPRESS_BASE_URL=http://localhost:3000

# Test Account Buttons (SECURITY: Set to 'false' in production!)
# This enables quick login buttons on the login page for testing
# WARNING: This is a security risk and should NEVER be enabled in production
NEXT_PUBLIC_ENABLE_TEST_ACCOUNTS=true

# Debug Configuration
DEBUG=false
DEBUG_AUTH=false
DEBUG_RBAC=false
DEBUG_API=false

# ========================================
# üì± MOBILE & PWA
# ========================================

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=Contract Management System
NEXT_PUBLIC_PWA_SHORT_NAME=CMS
NEXT_PUBLIC_PWA_DESCRIPTION=Professional contract management and generation system

# ========================================
# üåç INTERNATIONALIZATION
# ========================================

# i18n Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar,es,fr,de
NEXT_PUBLIC_FALLBACK_LOCALE=en

# ========================================
# üîí PRIVACY & COMPLIANCE
# ========================================

# GDPR Compliance
NEXT_PUBLIC_GDPR_ENABLED=true
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# Data Retention
USER_DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650
CONTRACT_RETENTION_DAYS=7300

# ========================================
# üìã FEATURE FLAGS
# ========================================

# Feature Toggles
NEXT_PUBLIC_FEATURE_AI_CONTRACTS=true
NEXT_PUBLIC_FEATURE_REAL_TIME_COLLABORATION=true
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_FEATURE_MOBILE_APP=true
NEXT_PUBLIC_FEATURE_API_ACCESS=true

# ========================================
# üö® EMERGENCY & MAINTENANCE
# ========================================

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Emergency Contacts
EMERGENCY_CONTACT_EMAIL=admin@yourdomain.com
EMERGENCY_CONTACT_PHONE=+1234567890

# ========================================
# üìù NOTES
# ========================================
# 
# 1. Never commit .env.local to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate API keys regularly
# 4. Monitor environment variables for security
# 5. Use different values for development/staging/production
# 6. Keep backup copies of critical configuration
# 7. Document any custom environment variables
# 8. Test configuration changes in staging first
